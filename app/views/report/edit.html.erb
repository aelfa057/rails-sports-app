<div class='row'>
  <div class='col-md-4 col-md-offset-4'>
      <%= form_for @report, :url => {:action => "update"} do |f| %>
        <div class="ui form">
    
        
        <div class="field">
            <label>Winner </label>
            <% if params[:team_id] = @match.home_team_id %>
              <%= f.collection_select(:winner_id_from_home, Team.find([@match.home_team_id, @match.away_team_id]), :id, :name, html: {id: "job"}) %>
            <% elsif params[:team_id] = @match.away_team_id %>
              <%= f.collection_select(:winner_id_from_away, Team.find([@match.home_team_id, @match.away_team_id]), :id, :name, html: {id: "job"}) %>
            <% end %>
        </div>
        <!--
        <div class="inline field">
          <div class="ui checkbox">
            <input type="checkbox" tabindex="0" class="hidden">
            <label>I agree to the Terms and Conditions</label>
          </div>
        </div>-->
    
      </div>
      
      <div class='col-md-3 col-md-offset-6' style='margin-top: 4px;'>
        <%= f.submit class: 'ui submit button' %>
      </div>
      
      <% end %>
  </div>
</div>

<div class='row'>
  <div class='col-md-5 col-md-offset-1'>
    <h3>Home team reported the following team as the winner: <%= Team.find(@report.winner_id_from_home).name %> </h3>
  </div>
  <div class='col-md-5'>
    <h3>Away team reported the following winner: <%= Team.find(@report.winner_id_from_away).name %></h3>
  </div>
</div>

