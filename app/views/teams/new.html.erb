
<div class="col-md-6 col-md-offset-4 form-style-5 top-margin">
    
    
    
      <%= form_for(@team) do |f| %>
      
      <!-- Title form group -->
          <fieldset>
              <legend><span class="number">1</span> Create a Team</legend>
              <%= f.label :team_name %>
              <%= f.text_field :name, class: "form-control", placeholder: "Enter Name", autofocus: true %>
              <%= f.label :sport_id  %>
              <%= f.collection_select(:sport_id, Sport.all, :id, :name, html: {id: "job"} ) %>  
              <%= f.collection_check_boxes :user_ids, User.all, :id, :username do |cb| %>
                  
                  <%= cb.check_box(class: "checkbox-inline") + cb.text if current_user.username != cb.text %>
              <% end %>
          </fieldset>
        
      <!-- Submit Button Form -->
      <div class = "form-group">    
        <div class ="col-sm-offset-1 col-sm-10">
           <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
      
      <% end %>
       <div class = "cancel-request col-xs-4 col-xs-offset-8">
       <%= link_to 'Cancel request', root_path %> 
       </div>
</div>

