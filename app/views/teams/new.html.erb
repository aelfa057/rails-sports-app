<div class ='row'>
    
    <div class = 'col-xs-12 top-margin'> 
      <%= form_for(@team, :html => {class: "form-horizontal", roll: "form"}) do |f| %>
      
      <!-- Title form group -->
      <div class = "form-group">       
          
          <div class = "control-label col-sm-2">
            <%= f.label :name %>
          </div>
          
          <div class = "col-sm-8">
             <%= f.text_field :name, class: "form-control", placeholder: "Team Name", autofocus:true %>
          </div>
          
      </div>
     
      <!-- Members form -->
      <div class = "form-group">     
      
        <div class = "row">
          <div class ="col-sm-offset-2 col-sm-8">
           <%= f.collection_check_boxes :user_ids, User.all, :id, :email do |cb| %>
             <% cb.label(class: "checkbox-inline input_checkbox") { cb.check_box(class: "checkbox") + cb.text} %>
           <% end %>
          </div>
        </div>
        
      </div>
    
      <!-- Submit Button Form -->
      <div class = "form-group">    
        <div class ="col-sm-offset-5 col-sm-10">
           <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
      <% end %>
       <div class = "cancel-request col-xs-4 col-xs-offset-5">
      [ <%= link_to 'Cancel request', root_path %> ]
       </div>
    </div>
  </div>