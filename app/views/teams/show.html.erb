<div class='row'>
  



  <div class='row'>
    <div class='col-md-4'>
      <%= image_tag 'team_logo.png', width: "300px" %>
    </div>
    <div class='col-md-offset-5'>
      <div class='col top-margin'>
        <div class="ui statistics">
          
          <div class="statistic">
            <div class="value">
              <%= @team.wins if @team.wins %>
              <% if @team.wins = 0 %>
              11
              <% end %>
            </div>
            
            <div class="label">
              Wins
            </div>
          </div>
          
          <div class="statistic">
            <div class="value">
              <%= @team.losses if @team.losses %>
              <% if @team.losses = 0 %>
              4
              <% end %>
            </div>
            <div class="label">
              Losses
            </div>
          </div>
          
          <div class="statistic">
            <div class="value">
              <i class="star icon"></i> 5
            </div>
            <div class="label">
              Street Rep
            </div>
          </div>
          
          <div class="statistic">
            <div class="value">
              <%= image_tag 'group.png' %>
              <%= @team.team_memberships.all.count %>
            </div>
            <div class="label">
              Team Members
            </div>
          </div>
          
        </div>
        <div class='col top-margin'>
          <div class='two ui buttons top-margin'>
            <%= link_to new_team_match_path(@team.id) do %>
              <button class='ui button' style="background-color:#A71E39; color: #fff; margin-right: 10px;">Invite Player</button>
            <% end %>
            <%= link_to new_team_match_path(@team.id) do %>
              <button class='ui teal button'>Create a Match</button>
            <% end %>
          </div>
        </div>
        
    </div>
  </div>
  
</div>

<div class="container">
  <div class='row top-margin'>
    <div class = 'col col-md-10 col-md-offset-1'>
      <div class="ui divided list">
        <% @team_members.each do |member| %>
          <div class="item">
            <div class="right floated content">
              <%= link_to user_path(member.user_id) do %>
              <div class="ui button">View Profile</div>
              <% end %>
            </div>
            <%= image_tag 'users.png', :class => "ui avatar image" %>
            <div class="content">
              <%= User.find(member.user_id).username %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<h4 class="ui horizontal divider header">
  <i class="tag icon"></i>
  Upcoming Matches
</h4>


</div>

<div class='row top-margin'>
  <div class='col-md-10 col-md-offset-1'>
    <table class="table">
      <thead class="thead-inverse">
        <tr>
          <th>ID</th>
          <th>Home Team</th>
          <th>Away Team</th>
          <th>Date</th>
          <th>Time</th>
          <th>Location</th>
          <th>Reported</th>
        </tr>
      </thead>
      <tbody>
        <% @matches.each do |match| %>
          <tr>
            <th scope="row"><%= match.id %></th>
            <td><%= match.home_team.name %></td>
            <td><%= match.away_team.name %></td>
            <td><%= match.match_date %></td>
            <td><%= match.match_time %></td>
            <td><%= match.location %></td>       
            <th>
                <%= link_to edit_team_match_report_path(@team, match.id, match.report.id) do %>
                  <button class="mini ui button teal">
                    Report Score
                  </button>
                <% end %>
            </th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>