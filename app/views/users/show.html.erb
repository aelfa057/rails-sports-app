<div class="row">
    <div class="col col-md-4 col-md-offset-4 center top-margin">
        <%= image_tag '007-kickboxer.png' %>
    </div>
</div>

<h4 align = "center"><%#= @user.username %>[Username]</h4>

<div class='row' align='center' style="margin-left: 3vh;">
  <% @user_teams.each do |team| %>
    <div class="col-md-2 top-margin">
      <a href="/matches/new" class="thumbnail">
        
        <% if team.id == 1 %>
          <%= image_tag "basketball.png" %>
        <% elsif team.id == 2 %>
          <%= image_tag "football.png" %>
        <% else %>
          <%= image_tag "soccer.png" %>
        <% end %>
        
        <h2 align="center"><%= team.name %> </h2>
      </a>
    </div>
  <% end %>  
</div>
<div align = "center">
  <%= will_paginate @user_teams %>
</div